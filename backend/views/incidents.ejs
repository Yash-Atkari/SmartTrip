<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Nearby Incidents - SmartTrip</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <div class="container mt-5">
    <h2 class="text-center mb-4">Nearby Incidents</h2>

    <% if (incidents && incidents.length > 0) { %>
      <div class="row">
        <% incidents.forEach(function(incident) { %>
          <div class="col-md-6 col-lg-4 mb-4">
            <div class="card shadow-sm border-0 rounded-3">
              <div class="card-body">
                <h5 class="card-title"><%= incident.type %></h5>
                <p class="card-text"><%= incident.description || "No description provided." %></p>
                
                <ul class="list-unstyled small text-muted">
                  <li><strong>Status:</strong> <%= incident.status %></li>
                  <li><strong>Time:</strong> <%= new Date(incident.timestamp).toLocaleString() %></li>
                  <li><strong>Location:</strong> [<%= incident.location.coordinates[1] %>, <%= incident.location.coordinates[0] %>]</li>
                </ul>

                <% if (incident.photos && incident.photos.length > 0) { %>
                  <div class="mt-2">
                    <img src="<%= incident.photos[0] %>" class="img-fluid rounded" alt="Incident photo">
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <div class="alert alert-success text-center">
        ðŸŽ‰ No nearby incidents. You are safe!
      </div>
    <% } %>

    <div class="text-center mt-4">
      <a href="/dashboard" class="btn btn-secondary">Back to Dashboard</a>
    </div>
  </div>

</body>
</html>
